{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/dist/*",
    "**/esm/*",
    "**/__testfixtures__/*"
  ],
  "types": [
    "jest"
  ]
}